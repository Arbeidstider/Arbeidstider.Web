@model Arbeidstider.Web.Framework.ViewModels.Account.Register
   <section id='content'>
        <div class='container-fluid'>
       <div class='row-fluid' id='content-wrapper'>
           <div class='span12'>
               <div class='page-header'>
                   <h1 class='pull-left'>
                       <i class='icon-user'></i>
                       <span>User profile</span>
                   </h1>
                   <div class='row-fluid'>
                       <div class='span12 box'>
                           <div class='box-content box-double-padding'>
                               @using (Html.BeginForm())
                               {
                                       <fieldset>
                                           <div class='span4'>
                                               <div class='lead'>
                                                   <i class='icon-signin text-contrast'></i>
                                                   User info
                                               </div>
                                               <small class='muted'>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec nisl est, vulputate at porttitor non, interdum a mauris. Phasellus imperdiet gravida pulvinar.</small>
                                           </div>
                                           <div class='span12 offset1'>
                                               <div class='control-group'>
                                                   <label class='control-label'>Firstname</label>
                                                   <div class='controls'>
                                                       <input class='span12' name="employee.Firstname" xktype='text'>
                                                   </div>
                                               </div>
                                               <div class='control-group'>
                                                   <label class='control-label'>Lastname</label>
                                                   <div class='controls'>
                                                       <input class='span12' name='employee.Lastname' type='text'>
                                                   </div>
                                               </div>
                                               <div class='control-group'>
                                                   <label class='control-label'>Email</label>
                                                   <div class='controls'>
                                                       <input class='span12' name='email' type='text'>
                                                   </div>
                                               </div>
                                               <div class='control-group'>
                                                   <label class='control-label'>Mobile</label>
                                                   <div class='controls'>
                                                       <input class='span12' name='employee.Mobile' type='text'>
                                                   </div>
                                               </div>
                                               <div class='control-group'>
                                                   <label class='control-label'>Password</label>
                                                   <div class='controls'>
                                                       <input class='span12' name='password' type='text'>
                                                   </div>
                                               </div>
                                               <div class='control-group'>
                                                   <label class='control-label'>Password</label>
                                                   <div class='controls'>
                                                       <input class='span12' name='password' type='password'>
                                                   </div>
                                               </div>
                                               <div class='control-group'>
                                                   <label class='control-label'>Birthdate</label>
                                                   <div class='controls'>
                                                       <input class='span12' name='employee.Birthdate' type='text'>
                                                   </div>
                                               </div>
                                               <div class='control-group'>
                                                   <label class='control-label'>Birthdate</label>
                                                   <div class='controls'>
                                                       <input class='span12' name='employee.Birthdate' type='text'>
                                                   </div>
                                               </div>
                                               <div class='control-group'>
                                                   <label class='control-label'>Employee Group</label>
                                                   <div class='controls'>
                                                       @Html.DropDownList("employee.EmployeeGroup", new SelectList(new[]
                                                       {
                                                           new SelectListItem() {Text = "Administrator", Value = 1.ToString()},
                                                           new SelectListItem() {Text = "Manager", Value = 2.ToString()},
                                                           new SelectListItem() {Text = "Employer", Value = 3.ToString()}
                                                       }, "Value", "Text"))
                                                   </div>
                                               </div>
                                               <hr class='hr-normal'>
                                           </div>
                                       </fieldset>
                                       <div class='form-actions' style='margin-bottom: 0;'>
                                           <div class='text-right'>
                                               <div class='btn btn-primary btn-large'>
                                                   <input type="submit" name="Save" text="Save"/>
                                               </div>
                                           </div>
                                       </div>
                                   }
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>
  </section>