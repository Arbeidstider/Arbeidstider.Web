@using Microsoft.VisualBasic
<!DOCTYPE html>
<html>
  <head>
    <title>Mine Arbeidstider</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-7" />
    <meta content='Opptimaliserte vaktlister på nett' name='description'>
    @Html.Partial("Assets")
  </head>
    <body class='contrast-dark fixed-header fixed-navigation'>

            <header>
              <div class='navbar navbar-fixed-top'>
            <div class='navbar-inner'>
              <div class='container-fluid'>
                <a class='brand' href='index.html'>
                  <i class='icon-heart-empty'></i>
                  <span class='hidden-phone'>Arbeidstider</span>
                </a>
                <a class='toggle-nav btn pull-left' href='#'>
                  <i class='icon-reorder'></i>
                </a>
                <ul class='nav pull-right'>
                  
                  <li class='dropdown dark user-menu'>
                    <a class='dropdown-toggle' data-toggle='dropdown' href='#'>
                      <img width="23" height="23" alt="Henrik Gundersen" src="assets/Images/avatar.jpg" />
                      <span class='user-name hidden-phone'>Henrik Gundersen</span>
                      <b class='caret'></b>
                    </a>
                    <ul class='dropdown-menu'>
                      <li>
                        <a href="@Url.Action("UserProfile", "Dashboard")">
                          <i class='icon-user'></i>
                          Profil
                        </a>
                      </li>
                      <li>
                        <a href="@Url.Action("UserProfile", "Dashboard")">
                          <i class='icon-cog'></i>
                          Innstillinger
                        </a>
                      </li>
                      <li class='divider'></li>
                      <li>
                        <a class="logoff" href="@Url.Action("Logoff", "Account")">
                          <i class='icon-signout'></i>
                          Logg ut
                        </a>
                      </li>
                    </ul>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </header>
        <div id='wrapper'>
            <div id='main-nav-bg'></div>
        <nav class='main-nav-fixed' id='main-nav'>
            <div class='navigation'>
                <ul class='nav nav-stacked'>
                    <li class='active'>
                        <a href='/'>
                            <i class='icon-dashboard'></i>
                            <span>Mine Arbeidstider</span>
                        </a>
                    </li>
                    <li class=''>
                        <a class="dropdown-collapse" href="#"><i class='icon-sitemap'></i>
                            <span>Funksjoner</span>
                            <i class='icon-angle-down angle-down'></i>
                        </a>
                        <ul class='nav nav-stacked'>
                            <li class=''>
                                <a href='#'>
                                    <i class='icon-caret-right'></i>
                                    <span>Bytt vakt med kollega</span>
                                </a>
                            </li>
                            <li class=''>
                                <a href='#'>
                                    <i class='icon-caret-right'></i>
                                    <span>Søk om fri</span>
                                </a>
                            </li>
                            <li class=''>
                                <a href='@Url.Action("ConfirmShifts", "Dashboard")'>
                                    <i class='icon-caret-right'></i>
                                    <span>Sett faste fridager</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class='' href='@Url.Action("AddressBook", "Dashboard")'>
                            <i class='icon-group'></i>
                            <span>Kolleger</span>
                        </a>
                    </li>
                    <li class=''>
                        <a href='@Url.Action("Messages", "Dashboard")'>
                            <i class='icon-comments'></i>
                            <span>Meldinger</span>
                        </a>
                    </li>
                    <li>
                    <a class='' href='@Url.Action("UserProfile", "Dashboard")'>
                        <i class='icon-cogs'></i>
                        <span>Innstillinger</span>
                        <i class=''></i>
                    </a>      
                </ul>
            </div>
        </nav>
        <section id="content">
            @RenderBody()
        </section>
        @Html.Partial("BottomAssets")
    </body>
</html>
